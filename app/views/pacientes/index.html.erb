<p id="notice"><%= notice %></p>

<div class="oro-header oro-header--solid">
  <div class="row">
    <div class="col-md-6">
      <h1>Pacientes</h1>
    </div>
    <div class="col-md-6">
      <a class="pull-right btn oro-btn-image" href="" data-toggle="tooltip" title="Nuevo Paciente">
           <%=image_tag("new_person.png", alt: "Nuevo Paciente")%>
      </a>
       <a class="pull-right btn oro-btn-image" href="" data-toggle="tooltip" title="Vista Collage">
           <%=image_tag("lista_mosaico.png", alt: "Vista Collage")%>
      </a>
       <a class="pull-right btn oro-btn-image" href="" data-toggle="tooltip" title="Vista Tabla">
           <%=image_tag("lista_tabla.png", alt: "Vista Tabla")%>
      </a>
    </div>
  </div>  
</div>

<%if @pacientes.count > 0 %>
  <%= link_to 'Nuevo Paciente', new_paciente_path %>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Genero</th>
        <th>Tipo documento</th>
        <th>Documento</th>
        <th>F nacimiento</th>
        <th>Edad</th>
        <th>Pais nacimiento</th>
        <th>N departamento</th>
        <th>N ciudad</th>
        <th>Aseguradora</th>
        <th>Raza</th>
        <th>Etnia</th>
        <th>Pais residencia</th>
        <th>R departamento</th>
        <th>R ciudad</th>
        <th>R direccion</th>
        <th>Estado</th>
        <th>Pais estancia</th>
        <th>E departamento</th>
        <th>E ciudad</th>
        <th>Religion</th>
        <th>Celular</th>
        <th>Telefono</th>
        <th>Correo</th>
        <th>Usuario</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pacientes.each do |paciente| %>
        <tr>
          <td><%= paciente.nombre %></td>
          <td><%= paciente.apellido %></td>
          <td><%= paciente.genero %></td>
          <td><%= paciente.tipo_documento %></td>
          <td><%= paciente.documento %></td>
          <td><%= paciente.f_nacimiento %></td>
          <td><%= paciente.edad %></td>
          <td><%= paciente.pais_nacimiento %></td>
          <td><%= paciente.n_departamento %></td>
          <td><%= paciente.n_ciudad %></td>
          <td><%= paciente.aseguradora %></td>
          <td><%= paciente.raza %></td>
          <td><%= paciente.etnia %></td>
          <td><%= paciente.pais_residencia %></td>
          <td><%= paciente.r_departamento %></td>
          <td><%= paciente.r_ciudad %></td>
          <td><%= paciente.r_direccion %></td>
          <td><%= paciente.estado %></td>
          <td><%= paciente.pais_estancia %></td>
          <td><%= paciente.e_departamento %></td>
          <td><%= paciente.e_ciudad %></td>
          <td><%= paciente.religion %></td>
          <td><%= paciente.celular %></td>
          <td><%= paciente.telefono %></td>
          <td><%= paciente.correo %></td>
          <td><%= paciente.usuario.nombres %></td>
          <td><%= link_to 'Ver', paciente %></td>
          <td><%= link_to 'Editar', edit_paciente_path(paciente) %></td>
          <td><%= link_to 'Eliminar', paciente, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="oro-panel--solid">
    <div class="container">
        <div class="row">
          <div class="col-md-3 col-md-offset-5 oro-card oro-paciente--new">
            <%=image_tag("new_person.png", alt: "Nuevo Paciente")%>
            <a class="btn text-center">Crea tu <span>primer paciente<span></a>
          </div>  
        </div>
    </div>
      
  </div>
<% end %>

<br>
