<%= form_for(foto) do |f| %>
  <% if foto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(foto.errors.count, "error") %> prohibited this foto from being saved:</h2>

      <ul>
      <% foto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="oro-metrics__media-upload">
          <div class="field">
            <%= f.label :img_frontal %>
            <%= f.file_field :img_frontal %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="oro-metrics__media-upload">
          <div class="field">
            <%= f.label :img_lateral %>
            <%= f.file_field :img_lateral %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <br>
        <hr>
        <br>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :fecha_subida, class: 'form-label' %>
          <%= f.date_select :f_subida, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= f.label :foto_titulo, class: 'form-label' %>
          <%= f.text_field :foto_titulo, class: 'form-control'  %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= f.label :paciente_id, class: 'form-label' %>
          <%= f.collection_select :paciente_id, Paciente.all, :id, :nombre , class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-8">
        <div class="actions">
          <%= link_to 'Regresar', fotos_path %>
          <%= f.submit %>
        </div>
      </div>
    </div>
  </div>

<% end %>
