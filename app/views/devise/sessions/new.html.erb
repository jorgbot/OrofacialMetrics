<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-center">Iniciar sesión</h2>
    <br/>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Correo", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", class: "form-control" %>
      </div>

      <div>
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %> Guardar sesión
        <% end %>
        <span class="pull-right">
          <%= link_to "Olvidé mi contraseña", new_usuario_password_path %>
        </span>
      </div>

      <div class="actions">
        <%= f.submit "Ingresar", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
