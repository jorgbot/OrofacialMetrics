<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-center">Crear cuenta</h2>
    <br/>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :nombres, autofocus: true, placeholder: "Nombres", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Correo", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "ContraseÃ±a", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Registrar", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
